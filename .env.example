# Application Settings
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
PROJECT_NAME=FinGuard AI
VERSION=1.0.0

# Database Settings
POSTGRES_SERVER=localhost
POSTGRES_USER=finguard
POSTGRES_PASSWORD=finguard_password
POSTGRES_DB=finguard_db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://finguard:finguard_password@localhost:5432/finguard_db

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# ML Service
ML_SERVICE_URL=http://localhost:8001
ML_MODEL_TIMEOUT=30

# Explanation Service
EXPLAIN_SERVICE_URL=http://localhost:8002
LLM_MODEL_NAME=llama3
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Alerting Settings
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
ALERT_EMAIL_FROM=alerts@finguard-ai.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Fraud Detection Thresholds
RISK_SCORE_HIGH=75.0
RISK_SCORE_MEDIUM=50.0
RISK_SCORE_LOW=25.0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Monitoring
ENABLE_PROMETHEUS=True
LOG_LEVEL=INFO